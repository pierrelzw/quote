# 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 应用配置
FLASK_ENV=development
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production

# 数据库配置
# 开发环境：留空使用 SQLite
# 生产环境：填入 PostgreSQL 连接字符串
DATABASE_URL=

# CORS 配置
# 开发环境：* 允许所有来源
# 生产环境：指定前端域名
CORS_ORIGINS=*

# 服务器配置
PORT=5001
HOST=0.0.0.0

# 日志级别
LOG_LEVEL=INFO

# 调试模式（仅开发环境）
DEBUG=True
