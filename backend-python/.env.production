# 本地生产环境配置
# 用于模拟 Render 部署环境

# 应用配置
FLASK_ENV=production
JWT_SECRET_KEY=local_production_test_key_not_for_real_production

# 数据库配置 - 使用本地 PostgreSQL（如果有）或 SQLite
# 注意：生产环境使用 PostgreSQL，本地测试可以用 SQLite 模拟
DATABASE_URL=

# CORS 配置 - 模拟生产环境的严格 CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 服务器配置
PORT=5001
HOST=0.0.0.0

# 日志级别 - 生产环境级别
LOG_LEVEL=INFO

# 调试模式 - 生产环境关闭
DEBUG=False
